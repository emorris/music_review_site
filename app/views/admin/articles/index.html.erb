<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<%= link_to 'New Article', new_admin_article_path, class: "new" %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publish Date</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.publish_date %></td>
        <td><%= article.visible %></td>
        <td>
          <%= link_to 'Show', admin_article_path(article), class: "default" %>
          <%= link_to 'Edit', edit_admin_article_path(article), class: "edit"%>
          <%= link_to 'Destroy', admin_article_path(article), method: :delete, data: { confirm: 'Are you sure?' },class: "destroy"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


